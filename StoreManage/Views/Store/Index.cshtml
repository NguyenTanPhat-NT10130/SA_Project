@model IEnumerable<StoreManage.Models.Store>

<!DOCTYPE html>
<html>
<head>
    <title>Store List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Store List</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Product Type</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var store in Model)
            {
                <tr>
                    <td>@store.StoreID</td>
                    <td>@store.StoreName</td>
                    <td>@store.Price</td>
                    <td>@store.ProductType</td>
                    <td>@store.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@store.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@store.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
